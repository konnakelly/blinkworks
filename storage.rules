rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if request.auth != null && request.auth.uid == resource.metadata.uid;
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload files to tasks folder
    match /tasks/{taskId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read any file they have access to
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
